@using ELClass.services
@using Models
@model Appointment

@{
    var isArabic = CultureHelper.IsArabic;
}

@if (Model != null)
{
    <li class="pc-item">
        <a href="@Model.MeetingLink" target="_blank" class="pc-link" style="background: rgba(34, 197, 94, 0.1); color: #22c55e; border-radius: 8px; margin: 5px 10px;">
            <span class="pc-micon">
                <i class="fa-solid fa-video animate-pulse"></i>
            </span>
            <span class="pc-mtext font-bold">
                @(isArabic ? "مباشر الآن" : "Live Now")
            </span>
            <span class="pc-badge">
                <span class="w-2 h-2 bg-green-500 rounded-full d-inline-block"></span>
            </span>
        </a>
    </li>
}