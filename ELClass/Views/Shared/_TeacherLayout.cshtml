@{
    var currentLang = Context.Session.GetString("Language") ?? "en";
    var isAr = currentLang == "ar";
}
<!DOCTYPE html>
<html lang="@currentLang" dir="@(isAr ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-orange: #fd7e14;
            --bg-body: #f8f9fa;
            --sidebar-dark: #1a1c1e;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--bg-body);
        }

        /* Sidebar Styling */
        .sidebar {
            width: 260px;
            background: var(--sidebar-dark);
            min-height: 100vh;
            position: fixed;
            transition: 0.3s;
        }

            .sidebar .nav-link {
                color: #adb5bd;
                padding: 12px 20px;
                margin: 8px 15px;
                border-radius: 10px;
                font-weight: 500;
            }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    background: var(--primary-orange);
                    color: white;
                }

                .sidebar .nav-link i {
                    margin-inline-end: 10px;
                }

        /* Content Area */
        .main-wrapper {
            margin-inline-start: 260px;
            width: calc(100% - 260px);
            min-height: 100vh;
        }

        .top-nav {
            background: white;
            padding: 15px 30px;
            border-bottom: 1px solid #edf2f9;
        }

        /* Buttons & Components */
        .btn-orange {
            background: var(--primary-orange);
            color: white;
            border-radius: 10px;
            padding: 10px 25px;
            border: none;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-orange:hover {
                background: #e86b00;
                transform: translateY(-2px);
                color: white;
            }

        .custom-card {
            border: none;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.03);
            background: white;
            transition: 0.3s;
        }

            .custom-card:hover {
                transform: translateY(-5px);
            }

        [dir="rtl"] .sidebar {
            right: 0;
            left: auto;
        }

        [dir="rtl"] .main-wrapper {
            margin-right: 260px;
            margin-left: 0;
        }
    </style>
</head>
<body>

    <aside class="sidebar d-none d-lg-block">
        <div class="p-4 mb-3">
            <h4 class="text-white fw-bold"><span style="color:var(--primary-orange)">E-</span>Learn</h4>
        </div>
        <div class="nav flex-column">
            <a asp-area="Teachers" asp-controller="Course" asp-action="Index" class="nav-link active">
                <i class="fa-solid fa-layer-group"></i> @(isAr ? "كورساتي" : "My Courses")
            </a>
            <a asp-area="Teachers" asp-controller="Student" asp-action="Index" class="nav-link">
                <i class="fa-solid fa-user-graduate"></i> @(isAr ? "الطلاب" : "Students")
            </a>
        </div>
    </aside>

    <main class="main-wrapper">
        <nav class="top-nav d-flex justify-content-between align-items-center">
            <div class="search-box">
                <h5 class="fw-bold mb-0">@(isAr ? "مرحباً يا بطل" : "Welcome Back!")</h5>
            </div>
            <div class="d-flex align-items-center gap-3">
                <a href="@Url.Action("ChangeLanguage", "Home", new { area = "", lang = isAr ? "en" : "ar" })" class="text-decoration-none text-dark fw-bold">
                    @(isAr ? "English" : "العربية")
                </a>
                <img src="https://ui-avatars.com/api/?name=@User.Identity?.Name&background=fd7e14&color=fff" class="rounded-circle" width="40">
            </div>
        </nav>

        <div class="p-4">
            @RenderBody()
        </div>
    </main>

</body>
</html>