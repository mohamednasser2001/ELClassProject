@model Models.Course
@{
    Layout = "_StudentLayout";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <a asp-area="StudentArea" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <h2 class="fw-bold mb-0">@Model.TitleEn Lessons</h2>
    </div>

    <div class="row">
        @if (Model.Lessons != null && Model.Lessons.Any())
        {
            foreach (var lesson in Model.Lessons)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card shadow-sm h-100" style="border-left: 5px solid #9dbfad;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title mb-1">@lesson.Title</h5>
                                <p class="text-muted small mb-0">Explore lesson materials</p>
                            </div>
                            @* الرابط اللي هيدخله على تفاصيل الدرس نفسه *@
                            <a asp-action="LessonDetails" asp-route-id="@lesson.Id" class="btn btn-sm btn-teal text-white" style="background-color: #9dbfad;">
                                View <i class="fas fa-chevron-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">No lessons added to this course yet.</div>
            </div>
        }
    </div>
</div>
