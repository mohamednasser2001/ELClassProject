@using Models.ViewModels
@model ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_IdentityLayout"; // تأكد من استخدام نفس الـ Layout الخاص بالهوية
    var currentLang = Context.Session.GetString("Language") ?? "en";
}

<div class="card shadow-none">
    <div class="card-body p-4">
        <div class="row flex-between-center mb-2">
            <div class="col-auto">
                <h5>@(currentLang == "ar" ? "إعادة تعيين كلمة المرور" : "Reset Password")</h5>
            </div>
        </div>

        <form asp-action="ResetPassword" method="post">
            @* أهم جزء: إرسال الـ Token والـ UserId بشكل مخفي *@
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Token" />

            <div asp-validation-summary="All" class="text-danger fs--1"></div>

            <div class="mb-3">
                <label class="form-label" asp-for="NewPassword">
                    @(currentLang == "ar" ? "كلمة المرور الجديدة" : "New Password")
                </label>
                <input class="form-control" asp-for="NewPassword" type="password" />
                <span asp-validation-for="NewPassword" class="text-danger fs--1"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="ConfirmPassword">
                    @(currentLang == "ar" ? "تأكيد كلمة المرور" : "Confirm Password")
                </label>
                <input class="form-control" asp-for="ConfirmPassword" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger fs--1"></span>
            </div>

            <button class="btn btn-primary d-block w-100 mt-3" type="submit">
                @(currentLang == "ar" ? "حفظ كلمة المرور" : "Reset Password")
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
