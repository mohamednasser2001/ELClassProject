@using Models.ViewModels
@model ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
    // تم إلغاء الـ Layout هنا لأننا بنستخدم الهيكل الموحد داخل الصفحة (أو اتركه لو الـ Layout لا يؤثر على التنسيق)
    Layout = null;
    var currentLang = Context.Session.GetString("Language") ?? "en";
    var direction = currentLang == "ar" ? "rtl" : "ltr";
}

<!DOCTYPE html>
<html lang="@currentLang" dir="@direction">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ELClass</title>
    <link rel="stylesheet" href="~/AuthAssets/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="auth-body">

    <div class="auth-wrapper">
        <div class="auth-top-nav">
            <div class="logo">
                <span style="color:#f28b00; font-weight: bold; font-size: 24px;">EL</span><span style="color:#ffffff; font-weight: bold; font-size: 24px;">-CLASS</span>
            </div>
            <button type="button" class="btn-change-lang" onclick="changeLanguage()">
                <i class="fas fa-globe"></i> @(currentLang == "ar" ? "English" : "العربية")
            </button>
        </div>

        <div class="auth-container reset-password-card">
           
            <div class="auth-card">
                <div class="auth-header">
                    <h2>@(currentLang == "ar" ? "إعادة تعيين كلمة المرور" : "Reset Password")</h2>
                    <p>@(currentLang == "ar" ? "برجاء إدخال كلمة المرور الجديدة" : "Please enter your new password")</p>
                </div>

                <form asp-action="ResetPassword" method="post" class="auth-form">
                    @* الحقول المخفية للحفاظ على الأمان والـ Logic *@
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="Token" />

                    <div asp-validation-summary="All" class="text-danger mb-3" style="font-size: 13px;"></div>

                    <div class="form-group">
                        <label class="form-label" asp-for="NewPassword">
                            @(currentLang == "ar" ? "كلمة المرور الجديدة" : "New Password")
                        </label>
                        <div class="input-group-forget">
                            <i class="fas fa-lock"></i>
                            <input class="form-control" asp-for="NewPassword" type="password" placeholder="********" />
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger" style="font-size: 12px;"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="ConfirmPassword">
                            @(currentLang == "ar" ? "تأكيد كلمة المرور" : "Confirm Password")
                        </label>
                        <div class="input-group-forget">
                            <i class="fas fa-check-double"></i>
                            <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="********" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 12px;"></span>
                    </div>

                    <button class="btn-auth mt-3" type="submit">
                        @(currentLang == "ar" ? "حفظ كلمة المرور" : "Save Password")
                    </button>
                </form>

                <div class="back-to-login">
                    <a href="/Identity/Account/Login" class="auth-link">
                        <i class="fas fa-arrow-left"></i>
                        @(currentLang == "ar" ? "العودة لتسجيل الدخول" : "Back to Login")
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
  

</body>
</html>
<script>
    function changeLanguage() {
        // بنجيب اللغة الحالية من خاصية الـ dir في الـ html نفسه عشان نضمن إنها محدثة
        var currentDir = document.documentElement.getAttribute("dir");
        var newLang = currentDir === 'rtl' ? 'en' : 'ar';

        $.ajax({
            url: '/Identity/Account/SetLanguage',
            type: 'POST',
            data: { language: newLang },
            success: function () {
                location.reload();
            },
            error: function() {
                // لو حصل مشكلة في المسار، جرب المسار البديل بدون Identity
                $.post('/Account/SetLanguage', { language: newLang }, function() {
                    location.reload();
                });
            }
        });
    }
</script>
