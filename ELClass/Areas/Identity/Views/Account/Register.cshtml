@using Models.ViewModels
@model RegisterVM

@{
    Layout = null;
    var currentLang = System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
    var isArabic = currentLang == "ar";
    var direction = isArabic ? "rtl" : "ltr";
    var isGoogleUser = !string.IsNullOrEmpty(ViewBag.GoogleEmail?.ToString());
}

<!DOCTYPE html>
<html lang="@currentLang" dir="@direction">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(isArabic ? "إنشاء حساب" : "Register") - ElClass</title>

    <link rel="stylesheet" href="~/AuthAssets/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>

    <div class="auth-container">
        <div class="auth-top-nav">
            <div class="logo">
                <span style="color:#f28b00; font-weight: bold; font-size: 24px;">EL</span><span style="color:#ffffff; font-weight: bold; font-size: 24px;">-CLASS</span>
            </div>
            <a href="/Home/SetLanguage?culture=@(isArabic ? "en-US" : "ar-EG")&returnUrl=@Context.Request.Path"
               class="btn-change-lang" style="text-decoration: none; display: inline-flex; align-items: center; gap: 8px;">
                <i class="fas fa-globe"></i> @(isArabic ? "English" : "العربية")
            </a>
        </div>

        <div class="auth-card">
            <div class="auth-header">
                <h2>@(isArabic ? "إنشاء حساب جديد" : "Register")</h2>
                <p>
                    @(isArabic
                                        ? "من خلال منصتنا يمكنك التركيز على التعلم فقط"
                                        : "With our platform, you can focus only on learning")
                </p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size: 13px;"></div>

                @if (!isArabic)
                {
                    <div class="form-group">
                        <label class="form-label">Name (English)</label>
                        <input class="form-control" asp-for="NameEN" placeholder="Enter your name in English" />
                        <span class="text-danger fs--1" asp-validation-for="NameEN"></span>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="form-label">الاسم بالعربي</label>
                        <input class="form-control" asp-for="NameAR" placeholder="اكتب اسمك بالعربي" />
                        <span class="text-danger fs--1" asp-validation-for="NameAR"></span>
                    </div>
                }

                @*<div class="form-group">
                        <label class="form-label">@(isArabic ? "البريد الإلكتروني" : "Email Address")</label>
                        <input class="form-control" type="email" asp-for="Email" placeholder="test@gmail.com" value="@(ViewBag.GoogleEmail ?? "")" readonly="@(isGoogleUser ? "readonly" : null)" />
                        <span class="text-danger fs--1" asp-validation-for="Email"></span>
                    </div>*@
                <div class="form-group">
                    <label class="form-label">@(isArabic ? "البريد الإلكتروني" : "Email Address")</label>

                    @if (isGoogleUser)
                    {
                        <input class="form-control" type="email" asp-for="Email"
                               value="@(ViewBag.GoogleEmail ?? "")"
                               readonly="readonly" />
                    }
                    else
                    {
                        <input class="form-control" type="email" asp-for="Email"
                               placeholder="test@gmail.com" />
                    }

                    <span class="text-danger fs--1" asp-validation-for="Email"></span>
                </div>


                @if (!isGoogleUser)
                {
                    <div class="form-row">
                        <div class="form-group flex-1">
                            <label class="form-label">@(isArabic ? "كلمة المرور" : "Password")</label>
                            <input class="form-control" type="password" asp-for="Password" placeholder="********" />
                            <span class="text-danger fs--1" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group flex-1">
                            <label class="form-label">@(isArabic ? "تأكيد كلمة المرور" : "Confirm")</label>
                            <input class="form-control" type="password" asp-for="ConfirmPassword" placeholder="********" />
                            <span class="text-danger fs--1" asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>
                }

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="AcceptTerms" />
                    <label class="check-label" asp-for="AcceptTerms">
                        @(isArabic ? "أوافق على الشروط وسياسة الخصوصية" : "I accept the terms and privacy policy")
                    </label>
                    <span class="text-danger fs--1" asp-validation-for="AcceptTerms"></span>
                </div>

                <button class="btn-auth mt-2" type="submit">
                    @(isArabic ? "إنشاء حساب" : "Register")
                </button>
            </form>

            <div class="text-center mt-4">
                <p class="footer-text">
                    @(isArabic ? "لديك حساب بالفعل؟" : "Already have an account?")
                    <a href="/Identity/Account/Login" class="auth-link">
                        @(isArabic ? "تسجيل الدخول" : "Log In")
                    </a>
                </p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["success-notifications"] != null)
    {
        <script>toastr.success('@TempData["success-notifications"]')</script>
    }
    @if (TempData["error-notifications"] != null)
    {
        <script>toastr.error('@TempData["error-notifications"]')</script>
    }
</body>
</html>