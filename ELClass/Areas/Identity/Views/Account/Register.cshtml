@using Models.ViewModels
@model RegisterVM

@{
    Layout = null;
    var currentLang = Context.Session.GetString("Language") ?? "en";
    var direction = currentLang == "ar" ? "rtl" : "ltr";
}

<!DOCTYPE html>
<html lang="@currentLang" dir="@direction">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(currentLang == "ar" ? "إنشاء حساب" : "Register") - ElClass</title>

    <link rel="stylesheet" href="~/AuthAssets/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>

    <div class="auth-container" style="max-width: 500px;">
        <div style="text-align: end; margin-bottom: 10px;">
            <button type="button" class="btn-change-lang" onclick="changeLanguage()">
                <i class="fas fa-globe"></i> @(currentLang == "ar" ? "English" : "العربية")
            </button>
        </div>

        <div class="auth-card">
            <div class="auth-header">
                <h2>@(currentLang == "ar" ? "إنشاء حساب جديد" : "Register")</h2>
                <p>
                    @(currentLang == "ar"
                                        ? "من خلال منصتنا يمكنك التركيز على التعلم فقط"
                                        : "With our platform, you can focus only on learning")
                </p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size: 13px;"></div>

                @* حقل الاسم الديناميكي بناءً على اللغة *@
                @if (currentLang == "en")
                {
                    <div class="form-group">
                        <label class="form-label">Name (English)</label>
                        <input class="form-control" asp-for="NameEN" placeholder="Enter your name in English" />
                        <span class="text-danger fs--1" asp-validation-for="NameEN"></span>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="form-label">الاسم بالعربي</label>
                        <input class="form-control" asp-for="NameAR" placeholder="اكتب اسمك بالعربي" />
                        <span class="text-danger fs--1" asp-validation-for="NameAR"></span>
                    </div>
                }

                <div class="form-group">
                    <label class="form-label">@(currentLang == "ar" ? "البريد الإلكتروني" : "Email Address")</label>
                    <input class="form-control" type="email" asp-for="Email" placeholder="test@gmail.com" />
                    <span class="text-danger fs--1" asp-validation-for="Email"></span>
                </div>

                <div class="row" style="display: flex; gap: 15px;">
                    <div class="form-group" style="flex: 1;">
                        <label class="form-label">@(currentLang == "ar" ? "كلمة المرور" : "Password")</label>
                        <input class="form-control" type="password" asp-for="Password" placeholder="********" />
                        <span class="text-danger fs--1" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group" style="flex: 1;">
                        <label class="form-label">@(currentLang == "ar" ? "تأكيد كلمة المرور" : "Confirm")</label>
                        <input class="form-control" type="password" asp-for="ConfirmPassword" placeholder="********" />
                        <span class="text-danger fs--1" asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" id="terms" required />
                    <label for="terms" style="font-size: 13px; color: #475569;">
                        @(currentLang == "ar" ? "أوافق على الشروط وسياسة الخصوصية" : "I accept the terms and privacy policy")
                    </label>
                </div>

                <button class="btn-auth mt-2" type="submit" style="background-color: #F28B00;">
                    @(currentLang == "ar" ? "إنشاء حساب" : "Register")
                </button>
            </form>

            <div class="text-center mt-4">
                <p style="font-size: 14px;">
                    @(currentLang == "ar" ? "لديك حساب بالفعل؟" : "Already have an account?")
                    <a href="/Identity/Account/Login" style="color:var(--primary-color); font-weight:bold;">
                        @(currentLang == "ar" ? "تسجيل الدخول" : "Log In")
                    </a>
                </p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        function changeLanguage() {
            var newLang = '@currentLang' === 'ar' ? 'en' : 'ar';
            $.ajax({
                url: '/Identity/Account/SetLanguage',
                type: 'POST',
                data: { language: newLang },
                success: function () {
                    location.reload();
                }
            });
        }
    </script>

    @if (TempData["success-notifications"] != null)
    {
        <script>toastr.success('@TempData["success-notifications"]')</script>
    }
    @if (TempData["error-notifications"] != null)
    {
        <script>toastr.error('@TempData["error-notifications"]')</script>
    }
</body>
</html>