@using Models.ViewModels
@model LoginVM

@{
    Layout = null;
    
    var currentLang = System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
    var isArabic = currentLang == "ar";
    var direction = isArabic ? "rtl" : "ltr";
}

<!DOCTYPE html>
<html lang="@currentLang" dir="@direction">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(isArabic ? "تسجيل الدخول" : "Login") - ELClass</title>

    <link rel="stylesheet" href="~/AuthAssets/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>

    <div class="auth-container">
        <div class="auth-top-nav">
            <div class="logo">
                <span style="color:#f28b00; font-weight: bold; font-size: 24px;">EL</span><span style="color:#ffffff; font-weight: bold; font-size: 24px;">-CLASS</span>
            </div>

            @* تعديل الرابط ليتناسب مع الـ HomeController الرئيسي *@
            <a href="/Home/SetLanguage?culture=@(isArabic ? "en-US" : "ar-EG")&returnUrl=@Context.Request.Path"
               class="btn-change-lang" style="text-decoration: none; display: inline-flex; align-items: center; gap: 8px;">
                <i class="fas fa-globe"></i>
                <span>@(isArabic ? "English" : "العربية")</span>
            </a>
        </div>

        <div class="auth-card">
            <div class="auth-header">
                <h2>@(isArabic ? "تسجيل الدخول" : "Log in")</h2>
                <p>
                    @(isArabic ? "أو" : "or")
                    <a href="/Identity/Account/Register" class="auth-link">
                        @(isArabic ? "إنشاء حساب جديد" : "Create an account")
                    </a>
                </p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size: 13px;"></div>

                <div class="form-group">
                    <label class="form-label">@(isArabic ? "اسم المستخدم" : "Username / Email")</label>
                    <input class="form-control" type="text" id="EmailOrUserName"
                           placeholder="@(isArabic ? "البريد الإلكتروني أو اسم المستخدم" : "Email or Username")"
                           asp-for="EmailOrUserName" />
                    <span class="text-danger fs--1" asp-validation-for="EmailOrUserName"></span>
                </div>

                <div class="form-group" style="margin-bottom: 10px;">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <label class="form-label">@(isArabic ? "كلمة المرور" : "Password")</label>
                        <a href="/Identity/Account/ForgotPassword" class="forgot-link">@(isArabic ? "نسيت كلمة المرور؟" : "ForgotPassword?")</a>
                    </div>
                    <input class="form-control" type="password"
                           placeholder="********"
                           asp-for="Password" />
                    <span class="text-danger fs--1" asp-validation-for="Password"></span>
                </div>

                <div class="form-check mb-4">
                    <input type="checkbox" id="remember-me" asp-for="RememberMe" />
                    <label for="remember-me" class="check-label">@(isArabic ? "تذكرني على هذا الجهاز" : "Remember me on this device")</label>
                </div>

                <button class="btn-auth" type="submit">
                    @(isArabic ? "دخول" : "Log in")
                </button>
            </form>

            <div class="social-separator">
                <span>@(isArabic ? "أو الدخول بواسطة" : "or log in with")</span>
            </div>

            <div class="social-login">
                <a asp-controller="Account"
                   asp-action="ExternalLogin"
                   asp-area="Identity"
                   asp-route-provider="Google"
                   class="btn-google-login" style="text-decoration:none;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                        <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0c2.158 0 3.972.74 5.41 1.961L11.162 4.135C10.435 3.445 9.354 3 8 3a5 5 0 1 0 0 10c1.11 0 2.056-.253 2.796-.692V10H8V6.558h7.545z" />
                    </svg>
                    <span>Continue with Google</span>
                </a>
            </div>

            <div class="resend-container">
                <p>@(isArabic ? "لم يصلك كود التفعيل؟" : "Didn't get the code?")</p>
                <a href="javascript:void(0)" onclick="resendEmail()">
                    @(isArabic ? "إعادة إرسال الرابط" : "Resend activation link")
                </a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        function resendEmail() {
            var email = document.getElementById("EmailOrUserName").value;
            if (email === "") {
                toastr.error("@(isArabic ? "اكتب البريد الإلكتروني أولاً" : "Enter email first")");
                return;
            }
            window.location.href = "/Identity/Account/ResendConfirmationEmail?email=" + email;
        }
    </script>
</body>
</html>