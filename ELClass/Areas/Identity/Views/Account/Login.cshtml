@using Models.ViewModels
@model LoginVM

@{
    Layout = null; // سنستخدم التصميم الجديد بالكامل بدون Layout قديم
    var currentLang = Context.Session.GetString("Language") ?? "en";
    var direction = currentLang == "ar" ? "rtl" : "ltr";
}

<!DOCTYPE html>
<html lang="@currentLang" dir="@direction">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(currentLang == "ar" ? "تسجيل الدخول" : "Login") - ELClass</title>

    <link rel="stylesheet" href="~/AuthAssets/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>

    <div class="auth-container">
        <div style="text-align: end; margin-bottom: 10px;">
            <button type="button" class="btn-change-lang" onclick="changeLanguage()">
                <i class="fas fa-globe"></i> @(currentLang == "ar" ? "English" : "العربية")
            </button>
        </div>

        <div class="auth-card">
            <div class="auth-header">
                <h2>@(currentLang == "ar" ? "تسجيل الدخول" : "Log in")</h2>
                <p>
                    @(currentLang == "ar" ? "أو" : "or")
                    <a href="/Identity/Account/Register" style="color:var(--primary-color); font-weight:bold;">
                        @(currentLang == "ar" ? "إنشاء حساب جديد" : "Create an account")
                    </a>
                </p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size: 13px;"></div>

                <div class="form-group">
                    <label class="form-label">@(currentLang == "ar" ? "اسم المستخدم" : "Username / Email")</label>
                    <input class="form-control" type="text" id="EmailOrUserName"
                           placeholder="@(currentLang == "ar" ? "البريد الإلكتروني أو اسم المستخدم" : "Email address Or UserName")"
                           asp-for="EmailOrUserName" />
                    <span class="text-danger fs--1" asp-validation-for="EmailOrUserName"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">@(currentLang == "ar" ? "كلمة المرور" : "Password")</label>
                    <input class="form-control" type="password"
                           placeholder="@(currentLang == "ar" ? "كلمة المرور" : "Password")"
                           asp-for="Password" />
                    <span class="text-danger fs--1" asp-validation-for="Password"></span>
                </div>

                <div class="auth-links">
                    <div class="form-check">
                        <input type="checkbox" id="remember-me" asp-for="RememberMe" />
                        <label for="remember-me">@(currentLang == "ar" ? "تذكرني" : "Remember me")</label>
                    </div>
                    <a href="/Identity/Account/ForgotPassword">@(currentLang == "ar" ? "نسيت كلمة المرور؟" : "Forgot Password?")</a>
                </div>

                <button class="btn-auth mt-3" type="submit" style="background-color: #F28B00;">
                    @(currentLang == "ar" ? "دخول" : "Log in")
                </button>
            </form>

            <div class="social-login">
                <p>@(currentLang == "ar" ? "أو الدخول بواسطة" : "or log in with")</p>
                <div style="display:flex; gap:10px;">
                    <a href="#" class="btn-auth btn-google" style="flex:1; text-decoration:none; display:flex; align-items:center; justify-content:center;">
                        <i class="fab fa-google me-2"></i> Google
                    </a>
                    <a href="#" class="btn-auth" style="flex:1; background:#1877f2; text-decoration:none; display:flex; align-items:center; justify-content:center;">
                        <i class="fab fa-facebook-f me-2"></i> Facebook
                    </a>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="javascript:void(0)" onclick="resendEmail()" class="text-muted" style="font-size:13px; text-decoration:underline;">
                    <i class="fas fa-envelope-open-text"></i> @(currentLang == "ar" ? "إعادة إرسال رابط التفعيل؟" : "Resend activation link?")
                </a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        // تغيير اللغة بنفس الـ Logic بتاعك
        function changeLanguage() {
            var newLang = '@currentLang' === 'ar' ? 'en' : 'ar';
            $.ajax({
                url: '/Identity/Account/SetLanguage',
                type: 'POST',
                data: { language: newLang },
                success: function () {
                    location.reload();
                }
            });
        }

        // إعادة إرسال الإيميل
        function resendEmail() {
            var email = document.getElementById("EmailOrUserName").value;
            if (email === "") {
                var msg = "@(currentLang == "ar" ? "يرجى كتابة البريد الإلكتروني أولاً" : "Please enter your email first")";
                toastr.error(msg);
                return;
            }
            window.location.href = "/Identity/Account/ResendConfirmationEmail?email=" + email;
        }
    </script>

    @* عرض التنبيهات *@
    @if (TempData["success-notifications"] != null)
    {
        <script>toastr.success('@TempData["success-notifications"]')</script>
    }
    @if (TempData["error-notifications"] != null)
    {
        <script>toastr.error('@TempData["error-notifications"]')</script>
    }
</body>
</html>