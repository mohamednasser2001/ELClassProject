<link rel="stylesheet" href="~/AuthAssets/style.css" />

@{
    Layout = null;
    var currentLang = Context.Session.GetString("Language") ?? "en";
    var direction = currentLang == "ar" ? "rtl" : "ltr";
}

<!DOCTYPE html>
<html lang="@currentLang" dir="@direction">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(currentLang == "ar" ? "نسيت كلمة المرور" : "Forgot Password") - ElClass</title>

    <link rel="stylesheet" href="~/AuthAssets/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="auth-body">

    <div class="auth-wrapper">
        @* <nav class="auth-nav">
            <a class="auth-brand" href="/">
                <img src="~/Images/logos-04.png" alt="Logo">
            </a>
        </nav> *@
        <div class="auth-top-nav">
            <div class="logo">
                <span style="color:#f28b00; font-weight: bold; font-size: 24px;">EL</span><span style="color:#ffffff; font-weight: bold; font-size: 24px;">-CLASS</span>
            </div>
            <button type="button" class="btn-change-lang" onclick="changeLanguage()">
                <i class="fas fa-globe"></i> @(currentLang == "ar" ? "English" : "العربية")
            </button>
        </div>

        <div class="auth-content">
            <div class="auth-card">
                <div class="auth-header">
                    <h2>@(currentLang == "ar" ? "استعادة كلمة المرور" : "Reset Password")</h2>
                    <p>
                        @(currentLang == "ar"
                                                ? "أدخل بريدك الإلكتروني وسنرسل لك رابط الاستعادة"
                                                : "Enter your email and we'll send you a reset link")
                    </p>
                </div>

                @* <form asp-action="ForgotPassword" method="post" class="auth-form">
                    <div class="form-group-custom">
                        <label class="custom-label">@(currentLang == "ar" ? "البريد الإلكتروني" : "Email Address")</label>
                        <div class="input-wrapper">
                            <i class="fas fa-paper-plane input-icon"></i>
                            <input class="custom-input" type="email" name="email"
                                   placeholder="example@mail.com" required />
                        </div>
                    </div>

                    <button class="btn-primary-auth mt-3" type="submit">
                        @(currentLang == "ar" ? "إرسال الرابط" : "Send Reset Link")
                    </button>
                </form> *@
                <form asp-action="ForgotPassword" method="post">
                    <div class="form-group">
                        <label class="form-label">@(currentLang == "ar" ? "البريد الإلكتروني" : "Email Address")</label>

                        <div class="input-group-forget">
                            <i class="fas fa-paper-plane"></i> <input type="email" name="email" class="form-control"
                                                                      placeholder="example@mail.com" required />
                        </div>
                    </div>

                    <button type="submit" class="btn-auth">
                        @(currentLang == "ar" ? "إرسال الرابط" : "Send Reset Link")
                    </button>
                </form>

                <div class="back-to-login">
                    <a href="/Identity/Account/Login" class="auth-link">
                        <i class="fas fa-arrow-left"></i>
                        @(currentLang == "ar" ? "العودة لتسجيل الدخول" : "Back to Login")
                    </a>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
<script>
    function changeLanguage() {
       
        var currentDir = document.documentElement.getAttribute("dir");
        var newLang = currentDir === 'rtl' ? 'en' : 'ar';

        $.ajax({
            url: '/Identity/Account/SetLanguage',
            type: 'POST',
            data: { language: newLang },
            success: function () {
                location.reload();
            },
            error: function() {
           
                $.post('/Account/SetLanguage', { language: newLang }, function() {
                    location.reload();
                });
            }
        });
    }
</script>