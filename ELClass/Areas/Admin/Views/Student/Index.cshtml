@{
    var currentLang = Context.Session.GetString("Language") ?? "en";
    var direction = currentLang == "ar" ? "rtl" : "ltr";
}

<style>
    /* الإعدادات العامة للكارت - مطابقة لقائمة المدربين */
    .custom-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        background-color: #ffffff;
        border-top: 4px solid #fd7e14; /* الخط البرتقالي المميز */
        margin-top: 20px;
        overflow: hidden;
    }

    .card-header {
        background-color: transparent !important;
        border-bottom: 1px solid #f0f0f0 !important;
        padding: 20px !important;
    }

    .card-title {
        font-weight: 700;
        color: #333;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* تنسيق الجدول الاحترافي المتباعد */
    #StudentsTable {
        border-collapse: separate;
        border-spacing: 0 8px;
        width: 100% !important;
    }

        #StudentsTable thead th {
            background-color: #f8f9fa;
            border: none;
            color: #666;
            font-weight: 600;
            font-size: 0.85rem;
            padding: 15px;
        }

        #StudentsTable tbody tr {
            background-color: #ffffff;
            transition: all 0.3s ease;
        }

            #StudentsTable tbody tr:hover {
                background-color: #fffaf5;
            }

        #StudentsTable td {
            border: none !important;
            padding: 12px 15px;
            vertical-align: middle;
            border-bottom: 1px solid #f1f1f1 !important;
        }

    /* الأزرار المخصصة */
    .btn-orange-outline {
        border: 1px solid #fd7e14;
        color: #fd7e14;
        background: transparent;
        transition: 0.3s;
    }

        .btn-orange-outline:hover {
            background-color: #fd7e14;
            color: white;
        }

    .btn-success-custom {
        background-color: #fd7e14;
        border: none;
        padding: 8px 18px;
        border-radius: 8px;
        font-weight: 500;
        color: white !important;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-success-custom:hover {
            background-color: #e86b00;
        }

    /* تنسيق روابط الأسماء */
    .student-link {
        color: #333;
        font-weight: 600;
        text-decoration: none;
    }

        .student-link:hover {
            color: #fd7e14;
        }

    /* تعديلات الشاشات الصغيرة */
    @@media (max-width: 576px) {
        .dataTables_info {
            display: none !important;
        }

        .btn-success-custom span {
            display: none;
        }

        .btn-success-custom {
            padding: 8px 12px !important;
        }

        .card-header {
            flex-direction: column;
            gap: 15px;
            text-align: center;
        }

        .language-toggle {
            width: 100%;
            justify-content: center;
        }
    }

    /* إخفاء أسهم الـ DataTable الافتراضية */
    table.dataTable thead th::before,
    table.dataTable thead th::after {
        display: none !important;
    }
</style>

@Html.AntiForgeryToken()
<div class="container-fluid" style="direction: @direction;">
    <div class="row">
        <div class="col-12">
            <div class="card custom-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-user-graduate" style="color:#fd7e14"></i>
                        @(currentLang == "ar" ? "قائمة الطلاب" : "Students List")
                    </h3>

                    <div class="d-flex gap-2 align-items-center language-toggle">
                        <a href="/Admin/Student/Create" class="btn btn-sm btn-success-custom">
                            <i class="fas fa-user-plus"></i>
                            <span> @(currentLang == "ar" ? "إضافة طالب جديد" : "Add New Student")</span>
                        </a>
                        <button class="btn btn-sm btn-orange-outline" onclick="changeLanguage()">
                            <i class="fas fa-language"></i>
                            
                        </button>
                    </div>
                </div>

                <div class="card-body p-2 p-md-4">
                    <div class="table-responsive">
                        <table id="StudentsTable" class="table">
                            <thead>
                                <tr>
                                    <th style="text-align: @(currentLang == "ar" ? "right" : "left")">#</th>
                                    <th style="text-align: @(currentLang == "ar" ? "right" : "left")">@(currentLang == "ar" ? "الاسم" : "Name")</th>
                                    <th style="text-align: center">@(currentLang == "ar" ? "التحكم" : "Actions")</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <script>
        var currentLang = '@currentLang';

        var languageSettings = {
            ar: {
                processing: "جاري التحميل...",
                search: "بحث:",
                lengthMenu: "_MENU_",
                info: "عرض _START_ إلى _END_ من _TOTAL_",
                zeroRecords: "لم يتم العثور على نتائج",
                paginate: { next: "»", previous: "«" }
            },
            en: {
                processing: "Loading...",
                search: "Search:",
                lengthMenu: "_MENU_",
                info: "Showing _START_ to _END_ of _TOTAL_",
                zeroRecords: "No matching records found",
                paginate: { next: "»", previous: "«" }
            }
        };

        $(document).ready(function () {
            $('#StudentsTable').DataTable({
                processing: true,
                serverSide: true,
                ordering: true,
                ajax: {
                    url: '@Url.Action("GetStudents", "Student", new { area = "Admin" })',
                    type: 'POST',
                    data: function(d) { d.language = currentLang; }
                },
                columns: [
                    {
                        data: null,
                        render: function (data, type, row, meta) {
                            return `<span class="text-muted small">${meta.row + meta.settings._iDisplayStart + 1}</span>`;
                        }
                    },
                    {
                        data: 'name',
                        render: function (data, type, row) {
                            return `<a href="/Admin/Student/Details/${row.id}" class="student-link">
                                    <i class="fas fa-user-circle me-1" style="color:#fd7e14; opacity:0.7"></i> ${data}
                                    </a>`;
                        }
                    },
                    {
                        data: 'id',
                        render: function (data) {
                            return `
                                <div class="d-flex gap-1 justify-content-center">
                                    <a href="/Admin/Student/Edit/${data}" class="btn btn-sm btn-light border text-warning"><i class="fas fa-edit"></i></a>
                                    <button class="btn btn-sm btn-light border text-danger" onclick="deleteStudent('${data}')"><i class="fas fa-trash"></i></button>
                                </div>`;
                        }
                    }
                ],
                language: languageSettings[currentLang],
                pageLength: 10,
                responsive: true,
                dom: '<"d-flex justify-content-between mb-2"lf>rt<"d-flex justify-content-between mt-2"ip>'
            });
        });

        function changeLanguage() {
            var newLang = currentLang === 'ar' ? 'en' : 'ar';
            $.post('@Url.Action("SetLanguage", "Home", new { area = "Admin" })', { language: newLang }, function() {
                location.reload();
            });
        }

        function deleteStudent(id) {
            Swal.fire({
                title: currentLang === 'ar' ? 'تأكيد الحذف' : 'Delete Confirmation',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#fd7e14',
                confirmButtonText: currentLang === 'ar' ? 'حذف' : 'Delete'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Admin/Student/Delete',
                        type: 'POST',
                        data: { id: id },
                        headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                        success: function () {
                            $('#StudentsTable').DataTable().ajax.reload(null, false);
                            Swal.fire({ icon: 'success', title: currentLang === 'ar' ? 'تم' : 'Done', timer: 1000, showConfirmButton: false });
                        }
                    });
                }
            });
        }
    </script>
}