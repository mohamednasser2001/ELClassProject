<form asp-action="UpdateRole" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />

    <div class="card">
        <div class="card-body">
            <h5>Manage Permissions for @Model.UserName</h5>

            <div class="form-check">
                <input class="form-check-input" type="radio" id="none" name="selectedRole" value="None" @(Model.SelectedRole == "None" ? "checked" : "")>
                <label class="form-check-label" for="none">Regular User</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" id="Admin" type="radio" name="selectedRole" value="Admin" @(Model.SelectedRole == "Admin" ? "checked" : "")>
                <label class="form-check-label" for="Admin">Admin</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" id="SuperAdmin" type="radio" name="selectedRole" value="SuperAdmin" @(Model.SelectedRole == "SuperAdmin" ? "checked" : "")>
                <label class="form-check-label" for="SuperAdmin">SuperAdmin</label>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </div>
</form>