@using Models.ViewModels.Course
@model CourseDetailsVM

@{
    var currentLang = Context.Session.GetString("Language") ?? "en";
    var direction = currentLang == "ar" ? "rtl" : "ltr";
}

<style>
    /* 1. الإعدادات العامة والألوان */
    :root {
        --primary-orange: #fd7e14;
        --hover-orange: #e86b00;
        --soft-orange: #fffaf5;
        --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    /* تحسين الهيدر */
    .header-section {
        flex-wrap: wrap;
        gap: 15px;
    }

    /* 2. تصميم الكروت الموحد */
    .custom-card {
        border: none;
        border-radius: 12px;
        box-shadow: var(--card-shadow);
        background-color: #ffffff;
        border-top: 4px solid var(--primary-orange);
        margin-bottom: 25px;
        overflow: hidden;
    }

    .card-header {
        background-color: transparent !important;
        border-bottom: 1px solid #f0f0f0 !important;
        padding: 15px 20px !important;
    }

    .card-title {
        font-weight: 700;
        color: #333;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.1rem;
    }

    /* 3. إحصائيات الكورس */
    .quick-info-card {
        background: white;
        padding: 1.2rem;
        border-radius: 12px;
        border-bottom: 4px solid var(--primary-orange);
        text-align: center;
        box-shadow: var(--card-shadow);
        transition: transform 0.3s ease;
        height: 100%;
    }

        .quick-info-card:hover {
            transform: translateY(-5px);
        }

    /* 4. كروت الأشخاص */
    .item-badge-card {
        background: white;
        border-radius: 10px;
        padding: 15px;
        border: 1px solid #eee;
        border-inline-start: 4px solid var(--primary-orange);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    /* 5. قسم الإضافة */
    .assign-section {
        background: var(--soft-orange);
        border-radius: 12px;
        padding: 1.2rem;
        margin-top: 1rem;
        border: 2px dashed var(--primary-orange);
    }

    /* 6. الأزرار */
    .btn-orange-custom {
        background-color: var(--primary-orange);
        border: none;
        color: white !important;
        font-weight: 500;
        border-radius: 8px;
        transition: 0.3s;
        height: 45px; /* توحيد الطول مع Select2 */
    }

        .btn-orange-custom:hover {
            background-color: var(--hover-orange);
        }

    /* 7. Select2 Responsive Fixes */
    .select2-container {
        width: 100% !important; /* ضمان العرض الكامل */
    }

    .select2-container--default .select2-selection--single {
        border-radius: 8px;
        height: 45px !important;
        border: 1px solid #dee2e6;
        display: flex;
        align-items: center;
    }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 42px !important;
        }

    .select2-container .select2-selection--single .select2-selection__rendered {
        padding-inline-start: 12px;
        padding-inline-end: 30px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .header-section {
            flex-direction: column;
            align-items: flex-start !important;
        }

        .btn-responsive-mobile {
            margin-top: 10px;
        }
    }
</style>

<div class="container-fluid py-4" style="direction: @direction; text-align: @(direction == "rtl" ? "right" : "left")">

    @* Header Section *@
    <div class="d-flex justify-content-between align-items-center mb-4 header-section">
        <div>
            <h2 class="fw-bold mb-1 fs-3"><i class="fas fa-book-open text-orange me-2"></i> Course Management</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Admin/Course" class="text-muted text-decoration-none">Courses</a></li>
                    <li class="breadcrumb-item active text-orange" aria-current="page">@Model.Course.TitleEn</li>
                </ol>
            </nav>
        </div>
        <span class="badge bg-white text-dark border p-2 shadow-sm">
            <i class="fas fa-hashtag" style="color:var(--primary-orange)"></i> Course ID: @Model.Course.Id
        </span>
    </div>

    @* Statistics *@
    <div class="row mb-4">
        <div class="col-6 col-md-3 mb-3">
            <div class="quick-info-card">
                <i class="fas fa-chalkboard-teacher fa-2x mb-2" style="color:var(--primary-orange)"></i>
                <h3 class="fw-bold mb-0">@Model.InstructorCourses.Count()</h3>
                <p class="text-muted mb-0 small">Instructors</p>
            </div>
        </div>
        <div class="col-6 col-md-3 mb-3">
            <div class="quick-info-card">
                <i class="fas fa-user-graduate fa-2x mb-2" style="color:var(--primary-orange)"></i>
                <h3 class="fw-bold mb-0">@Model.StudentCourses.Count()</h3>
                <p class="text-muted mb-0 small">Enrolled Students</p>
            </div>
        </div>
    </div>

    @* Instructors Section *@
    <div class="card custom-card">
        <div class="card-header">
            <h5 class="card-title"><i class="fas fa-chalkboard-teacher" style="color:var(--primary-orange)"></i> Assigned Instructors</h5>
        </div>
        <div class="card-body">
            <div class="row">
                @if (Model.InstructorCourses.Any())
                {
                    foreach (var ic in Model.InstructorCourses)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3 mb-3">
                            <div class="item-badge-card">
                                <div class="mb-3 text-center">
                                    <div class="mb-2">
                                        <img src="https://ui-avatars.com/api/?name=@ic.Instructor.NameEn&background=fffaf5&color=fd7e14" class="rounded-circle shadow-sm" style="width: 50px;">
                                    </div>
                                    <h6 class="fw-bold text-dark mb-0 text-truncate">@ic.Instructor.NameEn</h6>
                                    <small class="text-muted">Instructor</small>
                                </div>
                                <div class="d-flex gap-1">
                                    <a class="btn btn-sm btn-light border flex-grow-1" href="/Admin/Instructor/Details/@ic.InstructorId"><i class="fas fa-eye text-primary"></i></a>
                                    <button class="btn btn-sm btn-light border flex-grow-1" onclick="confirmRemoveInstructor('@ic.InstructorId')"><i class="fas fa-trash text-danger"></i></button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-4 text-muted">No instructors assigned yet.</div>
                }
            </div>

            <div class="assign-section">
                <label class="mb-2 fw-bold small"><i class="fas fa-user-plus text-orange"></i> Assign New Instructor</label>
                <div class="row g-2">
                    <div class="col-12 col-md-9">
                        <select id="instructorSelect" class="form-control"></select>
                        <input type="hidden" id="courseId" value="@Model.Course.Id" />
                    </div>
                    <div class="col-12 col-md-3">
                        <button id="assignInstructorBtn" class="btn btn-orange-custom w-100 btn-responsive-mobile">
                            <i class="fas fa-plus me-1"></i> Assign
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Students Section *@
    <div class="card custom-card">
        <div class="card-header">
            <h5 class="card-title"><i class="fas fa-user-graduate" style="color:var(--primary-orange)"></i> Enrolled Students</h5>
        </div>
        <div class="card-body">
            <div class="row">
                @if (Model.StudentCourses.Any())
                {
                    foreach (var sc in Model.StudentCourses)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3 mb-3">
                            <div class="item-badge-card">
                                <div class="mb-3 text-center">
                                    <div class="mb-2"><i class="fas fa-user-circle fa-2x text-muted"></i></div>
                                    <h6 class="fw-bold text-dark mb-0 text-truncate">@sc.Student.NameEn</h6>
                                    <small class="text-muted">ID: @sc.StudentId</small>
                                </div>
                                <div class="d-flex gap-1">
                                    <a class="btn btn-sm btn-light border flex-grow-1" href="/Admin/Student/Details/@sc.StudentId"><i class="fas fa-eye text-primary"></i></a>
                                    <button class="btn btn-sm btn-light border flex-grow-1" onclick="confirmRemoveStudent('@sc.StudentId')"><i class="fas fa-trash text-danger"></i></button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-4 text-muted">No students enrolled yet.</div>
                }
            </div>

            <div class="assign-section">
                <label class="mb-2 fw-bold small"><i class="fas fa-plus-circle text-orange"></i> Enroll New Student</label>
                <div class="row g-2">
                    <div class="col-12 col-md-9">
                        <select id="studentSelect" class="form-control"></select>
                    </div>
                    <div class="col-12 col-md-3">
                        <button id="enrollStudentBtn" class="btn btn-orange-custom w-100 btn-responsive-mobile">
                            <i class="fas fa-user-plus me-1"></i> Enroll
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            const courseId = $('#courseId').val();

            // Select2 Configuration with Responsive Width
            const select2Options = (url) => ({
                width: '100%',
                allowClear: true,
                ajax: {
                    url: url,
                    dataType: 'json',
                    delay: 300,
                    data: params => ({ term: params.term, courseId: courseId }),
                    processResults: data => ({ results: data.map(i => ({ id: i.id, text: i.text })) })
                }
            });

            $('#instructorSelect').select2({
                ...select2Options('/Admin/Course/SearchInstructors'),
                placeholder: "Search for an instructor..."
            });

            $('#studentSelect').select2({
                ...select2Options('/Admin/Course/SearchStudents'),
                placeholder: "Search for a student..."
            });

            // AJAX Assign Instructor
            $('#assignInstructorBtn').click(function () {
                const insId = $('#instructorSelect').val();
                if (!insId) { Swal.fire('Warning', 'Please select an instructor', 'warning'); return; }

                $.ajax({
                    url: '/Admin/Course/AssignInstructor',
                    type: 'POST',
                    data: { courseId: courseId, instructorId: insId },
                    success: res => res.success ? location.reload() : Swal.fire('Error', res.message, 'error')
                });
            });

            // AJAX Enroll Student
            $('#enrollStudentBtn').click(function () {
                const stdId = $('#studentSelect').val();
                if (!stdId) { Swal.fire('Warning', 'Please select a student', 'warning'); return; }

                $.ajax({
                    url: '/Admin/Course/AssignStudent',
                    type: 'POST',
                    data: { courseId: courseId, studentId: stdId },
                    success: res => res.success ? location.reload() : Swal.fire('Error', res.message, 'error')
                });
            });
        });

        // Delete Confirmations
        function confirmRemoveInstructor(insId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "Remove this instructor from the course?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#fd7e14',
                confirmButtonText: 'Yes, remove'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/Admin/Course/RemoveInstructor?instructorId=${insId}&courseId=${$('#courseId').val()}`;
                }
            });
        }

        function confirmRemoveStudent(stdId) {
            Swal.fire({
                title: 'Unenroll Student?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                confirmButtonText: 'Yes, remove'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/Admin/Course/RemoveStudent?studentId=${stdId}&courseId=${$('#courseId').val()}`;
                }
            });
        }
    </script>
}