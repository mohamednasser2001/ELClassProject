@{
    var currentLang = Context.Session.GetString("Language") ?? "en";
    var direction = currentLang == "ar" ? "rtl" : "ltr";
}
<style>
    table.dataTable thead th::before,
    table.dataTable thead th::after {
        display: none !important;
    }
</style>
<div class="container-fluid" style="direction: @direction;">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">@(currentLang == "ar" ? "قائمة الكورسات" : "Courses List")</h3>
                   
                    <div class="language-toggle">
                        <button class="btn btn-outline-primary" onclick="changeLanguage()">
                            @(currentLang == "ar" ? "English" : "العربية")
                        </button>
                    </div>
                </div>
                <div>
                    <a href="/Admin/Course/Create" class="btn btn-sm btn-success">
                        @(currentLang == "ar" ? "إضافة كورس جديد" : "Add New Course")
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
                <div class="card-body">
                    <table id="coursesTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="text-align: @(currentLang == "ar" ? "right" : "left")">@(currentLang == "ar" ? "الرقم" : "Number")</th>
                                <th style="text-align: @(currentLang == "ar" ? "right" : "left")">@(currentLang == "ar" ? "العنوان" : "Title")</th>
                                <th style="text-align: @(currentLang == "ar" ? "right" : "left")">@(currentLang == "ar" ? "الوصف" : "Description")</th>
                                <th style="text-align:@(currentLang == "ar" ? "right" : "left")">
                                    @(currentLang == "ar" ? "التحكم" : "Actions")
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    

    <script>
        var currentLang = '@currentLang';
        var currentDir = '@direction';

        var languageSettings = {
            ar: {
                processing: "جاري التحميل...",
                search: "بحث:",
                lengthMenu: "عرض _MENU_ عناصر",
                info: "عرض _START_ إلى _END_ من _TOTAL_ عنصر",
                infoEmpty: "لا توجد بيانات",
                infoFiltered: "(تم الفلترة من _MAX_ عناصر)",
                zeroRecords: "لم يتم العثور على نتائج",
                paginate: {
                    first: "الأول",
                    last: "الأخير",
                    next: "التالي",
                    previous: "السابق"
                },
                emptyTable: "لا توجد بيانات متاحة"
            },
            en: {
                processing: "Loading...",
                search: "Search:",
                lengthMenu: "Show _MENU_ entries",
                info: "Showing _START_ to _END_ of _TOTAL_ entries",
                infoEmpty: "Showing 0 to 0 of 0 entries",
                infoFiltered: "(filtered from _MAX_ total entries)",
                zeroRecords: "No matching records found",
                paginate: {
                    first: "First",
                    last: "Last",
                    next: "Next",
                    previous: "Previous"
                },
                emptyTable: "No data available"
            }
        };

        $(document).ready(function () {
            $('#coursesTable').DataTable({
                processing: true,
                ordering:false ,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetCourses", "Course", new { area = "Admin" })',
                    type: 'POST',
                    data: function(d) {
                        d.language = currentLang;
                    },
                    error: function(xhr, error, code) {
                        console.log('Error:', error);
                        console.log('Code:', code);
                        console.log('Response:', xhr.responseText);
                    }
                },
                columns: [
                    {
                        data: null,
                        orderable: false,
                        searchable: false,
                        render: function (data, type, row, meta) {
                        return meta.row + meta.settings._iDisplayStart + 1;
                            }
                     },
                    {
                        data: 'title',
                        name: 'title',
                        render: function (data, type, row) {
                            return `
                                <a href="/Admin/course/Details/${row.id}"
                                    class="fw-bold text-decoration-none">
                                    ${data}
                                </a>`;
                         }
                    },
                    {
                        data: 'description',
                        name: 'description'
                    },
                    {
                         data: 'id',
                    orderable: false,
                    searchable: false,
                    render: function (data, type, row) {
                        return `
                <div class="d-flex gap-2 justify-content-${currentLang === 'ar' ? 'end' : 'start'}">
                    <a href="/Admin/Course/Edit/${data}"
                       class="btn btn-sm btn-warning">
                        <i class="fa fa-edit"></i>
                        ${currentLang === 'ar' ? 'تعديل' : 'Edit'}
                    </a>

                    <button class="btn btn-sm btn-danger"
                            onclick="deleteCourse(${data})">
                        <i class="fa fa-trash"></i>
                        ${currentLang === 'ar' ? 'حذف' : 'Delete'}
                    </button>
                </div>
            `;
        }
                    }
                ],
                language: languageSettings[currentLang],
                pageLength: 10,
                lengthMenu: [[10, 25, 50, 100], [10, 25, 50, 100]],
                ordering: true,
                searching: true,
                autoWidth: false,
                responsive: true
            });
        });

        function changeLanguage() {
            var newLang = currentLang === 'ar' ? 'en' : 'ar';

            $.ajax({
                url: '@Url.Action("SetLanguage", "Home", new { area = "Admin" })',
                type: 'POST',
                data: { language: newLang },
                success: function() {
                    location.reload();
                }
            });
        }


                function deleteCourse(id) {

            Swal.fire({
                title: currentLang === 'ar' ? 'تأكيد الحذف' : 'Delete Confirmation',
                text: currentLang === 'ar'
                    ? 'هل أنت متأكد من حذف هذا الكورس؟ لا يمكن التراجع.'
                    : 'Are you sure you want to delete this course? This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: currentLang === 'ar' ? 'نعم، احذف' : 'Yes, delete',
                cancelButtonText: currentLang === 'ar' ? 'إلغاء' : 'Cancel'
            }).then((result) => {

                if (result.isConfirmed) {

                    $.ajax({
                        url: '/Admin/Course/Delete',
                        type: 'POST',
                        data: { id: id },
                                headers: {
           'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
        },
                        success: function () {

                            Swal.fire({
                                icon: 'success',
                                title: currentLang === 'ar' ? 'تم الحذف' : 'Deleted',
                                text: currentLang === 'ar'
                                    ? 'تم حذف الكورس بنجاح'
                                    : 'Course deleted successfully',
                                timer: 1500,
                                showConfirmButton: false
                            });

                            $('#coursesTable').DataTable().ajax.reload(null, false);
                        },
                        error: function () {
                            Swal.fire({
                                icon: 'error',
                                title: currentLang === 'ar' ? 'خطأ' : 'Error',
                                text: currentLang === 'ar'
                                    ? 'حدث خطأ أثناء الحذف'
                                    : 'An error occurred while deleting'
                            });
                        }
                    });

                }
            });
        }

    </script>
}