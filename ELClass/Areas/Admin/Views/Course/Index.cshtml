@{
    var currentLang = Context.Session.GetString("Language") ?? "en";
    var direction = currentLang == "ar" ? "rtl" : "ltr";
}

<style>
    .custom-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        background-color: #ffffff;
        border-top: 4px solid #fd7e14;
        margin-top: 20px;
    }

    .card-header {
        background-color: transparent !important;
        border-bottom: 1px solid #f0f0f0 !important;
        padding: 20px !important;
    }

    .card-title {
        font-weight: 700;
        color: #333;
        margin: 0;
    }

    #coursesTable {
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        #coursesTable thead th {
            background-color: #f8f9fa;
            border: none;
            color: #666;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            padding: 15px;
        }

        #coursesTable tbody tr {
            background-color: #ffffff;
            transition: all 0.3s ease;
        }

            #coursesTable tbody tr:hover {
                background-color: #fffaf5;
            }

        #coursesTable td {
            border: none !important;
            padding: 12px 15px;
            vertical-align: middle;
            border-bottom: 1px solid #f1f1f1 !important;
        }

    .btn-orange-outline {
        border: 1px solid #fd7e14;
        color: #fd7e14;
        background: transparent;
        transition: 0.3s;
    }

        .btn-orange-outline:hover {
            background-color: #fd7e14;
            color: white;
        }

    .btn-success-custom {
        background-color: #fd7e14;
        border: none;
        padding: 8px 20px;
        border-radius: 8px;
        font-weight: 500;
    }

        .btn-success-custom:hover {
            background-color: #e86b00;
        }

    /* --- التعديلات الجديدة للشاشات الصغيرة --- */
    @@media (max-width: 576px) {
        .dataTables_info {
            display: none !important; /* إخفاء النص المزعج في الموبايل */
        }

        .btn-success-custom span {
            display: none; /* إخفاء نص "إضافة كورس" وبقاء علامة + */
        }

        .btn-success-custom {
            padding: 8px 12px !important;
        }

        .card-header {
            padding: 15px !important;
        }
    }

    table.dataTable thead th::before,
    table.dataTable thead th::after {
        display: none !important;
    }

    .course-link {
        color: #333;
        font-weight: 600;
        text-decoration: none;
    }

        .course-link:hover {
            color: #fd7e14;
        }
</style>

<div class="container-fluid" style="direction: @direction;">
    <div class="row">
        <div class="col-12">
            <div class="card custom-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fa fa-book-open me-2 text-orange" style="color:#fd7e14"></i>
                        @(currentLang == "ar" ? "قائمة الكورسات" : "Courses List")
                    </h3>

                    <div class="d-flex gap-2 align-items-center">
                        <a href="/Admin/Course/Create" class="btn btn-sm btn-success-custom text-white">
                            <i class="fa fa-plus"></i>
                            <span>@(currentLang == "ar" ? " إضافة كورس جديد" : " Add New Course")</span>
                        </a>
                        <button class="btn btn-sm btn-orange-outline" onclick="changeLanguage()">
                            <i class="fa fa-language"></i>
                        </button>
                    </div>
                </div>

                <div class="card-body p-2 p-md-4">
                    <div class="table-responsive">
                        <table id="coursesTable" class="table w-100">
                            <thead>
                                <tr>
                                    <th style="text-align: @(currentLang == "ar" ? "right" : "left")">#</th>
                                    <th style="text-align: @(currentLang == "ar" ? "right" : "left")">@(currentLang == "ar" ? "العنوان" : "Title")</th>
                                    <th style="text-align: @(currentLang == "ar" ? "right" : "left")" class="d-none d-md-table-cell">@(currentLang == "ar" ? "الوصف" : "Description")</th>
                                    <th style="text-align: @(currentLang == "ar" ? "right" : "left")">@(currentLang == "ar" ? "التحكم" : "Actions")</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // الكود البرمجي (JavaScript) يبقى كما هو بدون أي تغيير لضمان عمل الـ AJAX والـ DataTable
        var currentLang = '@currentLang';
        var currentDir = '@direction';

        var languageSettings = {
            ar: {
                processing: "جاري التحميل...",
                search: "بحث:",
                lengthMenu: "_MENU_",
                info: "عرض _START_ إلى _END_ من _TOTAL_",
                zeroRecords: "لم يتم العثور على نتائج",
                paginate: { next: "»", previous: "«" }
            },
            en: {
                processing: "Loading...",
                search: "Search:",
                lengthMenu: "_MENU_",
                info: "Showing _START_ to _END_ of _TOTAL_",
                zeroRecords: "No matching records found",
                paginate: { next: "»", previous: "«" }
            }
        };

        $(document).ready(function () {
            $('#coursesTable').DataTable({
                processing: true,
                serverSide: true,
                ordering: true,
                ajax: {
                    url: '@Url.Action("GetCourses", "Course", new { area = "Admin" })',
                    type: 'POST',
                    data: function(d) { d.language = currentLang; }
                },
                columns: [
                    {
                        data: null,
                        render: function (data, type, row, meta) {
                            return `<span class="text-muted small">${meta.row + meta.settings._iDisplayStart + 1}</span>`;
                        }
                    },
                    {
                        data: 'title',
                        render: function (data, type, row) {
                            return `<a href="/Admin/course/Details/${row.id}" class="course-link">${data}</a>`;
                        }
                    },
                    {
                        data: 'description',
                        className: 'd-none d-md-table-cell', // إخفاء الوصف في الموبايل لتقليل الزحام
                        render: function (data) {
                            return `<span class="text-muted small">${data.length > 50 ? data.substring(0, 50) + '...' : data}</span>`;
                        }
                    },
                    {
                        data: 'id',
                        render: function (data) {
                            return `
                                <div class="d-flex gap-1 justify-content-center">
                                    <a href="/Admin/Course/Edit/${data}" class="btn btn-sm btn-light border text-warning"><i class="fa fa-edit"></i></a>
                                    <button class="btn btn-sm btn-light border text-danger" onclick="deleteCourse(${data})"><i class="fa fa-trash"></i></button>
                                </div>`;
                        }
                    }
                ],
                language: languageSettings[currentLang],
                pageLength: 10,
                responsive: true,
                dom: '<"d-flex justify-content-between mb-2"lf>rt<"d-flex justify-content-between mt-2"ip>'
            });
        });

        // دوال الحذف وتغيير اللغة (نفس الكود الأصلي)
        function changeLanguage() {
            var newLang = currentLang === 'ar' ? 'en' : 'ar';
            $.ajax({
                url: '@Url.Action("SetLanguage", "Home", new { area = "Admin" })',
                type: 'POST',
                data: { language: newLang },
                success: function() { location.reload(); }
            });
        }

        function deleteCourse(id) {
            Swal.fire({
                title: currentLang === 'ar' ? 'تأكيد الحذف' : 'Delete Confirmation',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#fd7e14',
                confirmButtonText: currentLang === 'ar' ? 'حذف' : 'Delete'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Admin/Course/Delete',
                        type: 'POST',
                        data: { id: id },
                        headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                        success: function () {
                            $('#coursesTable').DataTable().ajax.reload(null, false);
                        }
                    });
                }
            });
        }
    </script>
}