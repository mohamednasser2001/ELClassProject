@{
    if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_InstrcutorLayout";
    }
}

@using Models
@model IEnumerable<Lesson>

@{
    ViewData["Title"] = "Lecture Management";

    int index = 1;
}



<style>

</style>

<div class="bg-white dark:bg-slate-900 min-h-screen text-slate-900 dark:text-slate-100 transition-colors duration-200">
    <div class="w-full px-2 sm:px-4 py-4">

        <header class="flex flex-col lg:flex-row lg:items-center justify-between mb-4 gap-4 bg-slate-50 dark:bg-slate-800 p-4 rounded-lg shadow-sm">
            <nav class="flex items-center space-x-2 text-sm md:text-base font-medium overflow-hidden">
                <a class="text-slate-500 hover:text-primary transition-colors no-underline whitespace-nowrap" asp-action="Index">Rounds</a>
                <span class="material-icons text-slate-400 text-sm flex-shrink-0">chevron_right</span>
                <span class="text-slate-900 dark:text-white font-bold truncate">@ViewData["CourseTitle"]</span>
            </nav>

            <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4 w-full lg:w-auto">
                <div class="flex items-center gap-2 w-full sm:w-auto">
                    <label class="text-[10px] md:text-xs font-bold uppercase text-slate-500 whitespace-nowrap">Filter:</label>
                    <select id="instructorFilter" class="flex-1 sm:w-40 rounded border-slate-300 text-sm py-1.5 dark:bg-slate-700 dark:border-slate-600 focus:ring-primary">
                        <option value="all">All Instructors</option>
                        @foreach (var instructor in Model.Select(m => m.Instructor).GroupBy(i => i.Id).Select(g => g.First()))
                        {
                            <option value="@instructor.Id">@instructor.NameEn</option>
                        }
                    </select>
                </div>

                <a asp-action="CreateLesson" asp-route-courseId="@ViewData["CourseId"]"
                   class="bg-primary hover:bg-orange-600 hover:scale-[1.02] active:scale-95 text-white px-4 py-2 rounded shadow-md flex items-center justify-center gap-2 font-semibold transition-all no-underline w-full sm:w-auto text-sm whitespace-nowrap">
                    <span class="material-icons text-lg">add</span>
                    <span>Add Lecture</span>
                </a>
            </div>
        </header>

        <div class="border-b border-slate-200 dark:border-slate-700 mb-4 px-2">
            <nav class="flex space-x-6">
                <a class="border-b-2 border-primary py-3 px-1 text-primary font-bold text-sm no-underline" href="#">Lectures</a>
                @* <a class="border-b-2 border-transparent py-3 px-1 text-slate-500 hover:text-primary font-medium text-sm transition-all no-underline"
                   asp-action="GetStudents" asp-route-id="@ViewData["CourseId"]">Students</a> *@
            </nav>
        </div>

        <div class="bg-white dark:bg-slate-800 shadow-xl border border-slate-200 dark:border-slate-700 overflow-hidden rounded-md">
            <div class="overflow-x-auto custom-scrollbar">
                <table class="w-full text-left border-collapse min-w-[1000px]">
                    <thead>
                        <tr class="bg-slate-100 dark:bg-slate-900 border-b border-slate-300 dark:border-slate-600">
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase">No.</th>
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase">Instructor Name</th>
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase">Name</th>
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase text-center">Drive Link</th>
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase text-center">PDFs</th>
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase">Lecture Date</th>
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="lessonsTableBody" class="divide-y divide-slate-200 dark:divide-slate-700">
                        @foreach (var item in Model)
                        {
                            <tr class="lesson-row hover:bg-orange-50 dark:hover:bg-slate-700/40 transition-colors group"
                                data-instructor-id="@item.InstructorId">
                                <td class="px-4 py-4 text-sm text-slate-500 group-hover:text-primary font-medium row-index">@(index++)</td>
                                <td class="px-4 py-4 text-sm">
                                    <div class="flex items-center gap-2">
                                        <span class="font-semibold text-slate-800 dark:text-slate-100"> <a href="/admin/Instructor/details/@item.InstructorId">@item.Instructor.NameEn</a></span>
                                    </div>
                                </td>
                                <td class="px-4 py-4 text-sm">
                                    <div class="flex items-center gap-2">
                                        <span class="font-semibold text-slate-800 dark:text-slate-100">@item.Title</span>
                                    </div>
                                </td>
                                <td class="px-4 py-4 text-center">
                                    @if (!string.IsNullOrEmpty(item.DriveLink))
                                    {
                                        <a href="@item.DriveLink" target="_blank" class="inline-block p-1.5 rounded-full hover:bg-blue-50 text-blue-600 transition-all">
                                            <span class="material-icons text-xl">cloud_download</span>
                                        </a>
                                    }
                                </td>
                                <td class="px-4 py-4 text-center">
                                    <div class="flex justify-center gap-2">
                                        @if (!string.IsNullOrEmpty(item.LecturePdfUrl))
                                        {
                                            <a href="@item.LecturePdfUrl" title="Lecture PDF" class="text-orange-500 hover:text-orange-700"><span class="material-icons">picture_as_pdf</span></a>
                                        }
                                        @if (!string.IsNullOrEmpty(item.AssignmentPdfUrl))
                                        {
                                            <a href="@item.AssignmentPdfUrl" title="Assignment PDF" class="text-blue-500 hover:text-blue-700"><span class="material-icons">assignment</span></a>
                                        }
                                    </div>
                                </td>
                                <td class="px-4 py-4 text-sm font-mono text-slate-500">
                                    @item.LectureDate.ToString("yyyy-MM-dd")
                                </td>
                                <td class="px-4 py-4 text-center">
                                    <div class="flex justify-center gap-2">
                                        <a asp-action="EditLesson" asp-route-id="@item.Id" class="p-1.5 rounded-full hover:bg-orange-100 text-orange-400 hover:text-primary transition-all">
                                            <span class="material-icons text-xl">edit</span>
                                        </a>
                                        <button type="button"
                                                onclick="confirmDelete('@item.Id')"
                                                class="p-1.5 rounded-full hover:bg-red-100 text-red-400 hover:text-red-600 transition-all border-none bg-transparent cursor-pointer">
                                            <span class="material-icons text-xl">delete</span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @Html.AntiForgeryToken()

    </div>
</div>

<script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>

@section Scripts {
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This lesson will be permanently deleted!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444', // Red
                cancelButtonColor: '#64748b', // Slate
                confirmButtonText: 'Yes, delete it!',
                showClass: { popup: 'animate__animated animate__shakeX' }
            }).then((result) => {
                if (result.isConfirmed) {
                    // إنشاء Form وهمي لإرسال الـ POST مع الـ Token
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/Admin/Lesson/DeleteLesson/' + id; // تأكد من المسار الصحيح

                    // إضافة Anti-Forgery Token
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token;

                    form.appendChild(tokenInput);
                    document.body.appendChild(form);
                    form.submit();
                }
            })
        }


        document.getElementById('instructorFilter').addEventListener('change', function () {
            const selectedId = this.value; // ده هايكون الـ GUID بتاع الانستراكتور
            const rows = document.querySelectorAll('.lesson-row');
            let visibleIndex = 1;

            rows.forEach(row => {
                const rowInstructorId = row.getAttribute('data-instructor-id');

                // مقارنة دقيقة تماماً (Exact Match)
                if (selectedId === 'all' || rowInstructorId === selectedId) {
                    row.style.display = '';
                    row.querySelector('.row-index').textContent = visibleIndex++;
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
}