@using Models
@model Models.ViewModels.Instructor.InstructorIndexDashboardVM
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> _userManager
@{
    ViewData["Title"] = "Instructor Dashboard";
    Layout = "_InstrcutorLayout";
}

