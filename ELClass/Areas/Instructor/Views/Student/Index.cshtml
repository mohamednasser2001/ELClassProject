@{
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "ar";
    var currentLang = isArabic ?"ar" :"en";
    var direction = currentLang == "ar" ? "rtl" : "ltr";
}

@Html.AntiForgeryToken()
<div class="container-fluid" style="direction: @direction;">
    <div class="row">
        <div class="col-12">
            <div class="card custom-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-user-graduate icon-primary"></i>
                        @(currentLang == "ar" ? "قائمة الطلاب" : "Students List")
                    </h3>

                   
                </div>

                <div class="card-body p-2 p-md-4">
                    <div class="table-responsive">
                        <table id="StudentsTable" class="table">
                            <thead>
                                <tr>
                                    <th style="text-align: @(currentLang == "ar" ? "right" : "left")">#</th>
                                    <th style="text-align: @(currentLang == "ar" ? "right" : "left")">@(currentLang == "ar" ? "الاسم" : "Name")</th>
                                    <th style="text-align: center">@(currentLang == "ar" ? "التحكم" : "Actions")</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <script>
        var currentLang = '@currentLang';

        var languageSettings = {
            ar: {
                processing: "جاري التحميل...",
                search: "بحث:",
                lengthMenu: "_MENU_",
                info: "عرض _START_ إلى _END_ من _TOTAL_",
                zeroRecords: "لم يتم العثور على نتائج",
                paginate: { next: "»", previous: "«" }
            },
            en: {
                processing: "Loading...",
                search: "Search:",
                lengthMenu: "_MENU_",
                info: "Showing _START_ to _END_ of _TOTAL_",
                zeroRecords: "No matching records found",
                paginate: { next: "»", previous: "«" }
            }
        };

        $(document).ready(function () {
            $('#StudentsTable').DataTable({
                processing: true,
                serverSide: true,
                stateSave: true,
                ordering: true,
                stateSave: true,
                ajax: {
                    url: '@Url.Action("GetStudents", "Student", new { area = "Instructor" })',
                    type: 'POST',
                    data: function(d) { d.language = currentLang; }
                },
                columns: [
                    {
                        data: null,
                        render: function (data, type, row, meta) {
                            return `<span class="text-muted small">${meta.row + meta.settings._iDisplayStart + 1}</span>`;
                        }
                    },
                    {
                        data: 'name',
                        render: function (data, type, row) {
                            return `
                                    <i class="fas fa-user-circle me-1 icon-primary" style="opacity:0.7"></i> ${data}
                                    `;
                        }
                    },
                            {
            data: 'id',
            render: function (data, type, row) {
                
                var url = `/instructor/Appointment/create?StudentId=${row.id}`;

                
                if(row.courseId) {
                    url += `&CourseId=${row.courseId}`;
                }

                return `
                    <div class="d-flex gap-1 justify-content-center">
                        <a href="${url}" class="btn btn-sm rounded btn-outline-warning">
                            <i class="fas fa-plus-circle"></i>
                            ${currentLang === 'ar' ? 'إضافة موعد' : 'Add Appointment'}
                        </a>
                    </div>`;
            }
        }
                ],
                language: languageSettings[currentLang],
                pageLength: 10,
                responsive: true,
                dom: '<"d-flex justify-content-between mb-2"lf>rt<"d-flex justify-content-between mt-2"ip>'
            });
        });



        
    </script>
}