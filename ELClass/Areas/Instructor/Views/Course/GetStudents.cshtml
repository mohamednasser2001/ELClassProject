@using Models
@model IEnumerable<StudentCourse>

@{
    ViewData["Title"] = "Student Management";
    int index = 1;
}

@* ستايل Tailwind و Material Icons *@
<script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>

<div class="bg-white dark:bg-slate-900 min-h-screen text-slate-900 dark:text-slate-100 transition-colors duration-200">
    <div class="w-full px-2 sm:px-4 py-4">

        @* Header: مطابق تماماً لصفحة المحاضرات *@
        <header class="flex flex-col md:flex-row md:items-center justify-between mb-4 gap-4 bg-slate-50 dark:bg-slate-800 p-4 rounded-lg shadow-sm">
            <nav class="flex items-center space-x-2 text-sm md:text-base font-medium">
                <a class="text-slate-500 hover:text-primary transition-colors no-underline" asp-action="Index">Rounds</a>
                <span class="material-icons text-slate-400 text-sm">chevron_right</span>
                <span class="text-slate-900 dark:text-white font-bold">@ViewData["CourseTitle"]</span>
            </nav>
            @* زر إضافي إذا أردت إضافة طالب يدوياً، أو اتركه فارغاً للحفاظ على المحاذاة *@
            <div class="h-10"></div>
        </header>

        @* Tabs Navigation: هنا جعلنا "Students" هو النشط *@
        <div class="border-b border-slate-200 dark:border-slate-700 mb-4 px-2">
            <nav class="flex space-x-6">
                <a class="border-b-2 border-transparent py-3 px-1 text-slate-500 hover:text-primary font-medium text-sm transition-all no-underline"
                   asp-action="Details" asp-route-id="@ViewData["CourseId"]">Lectures</a>
                <a class="border-b-2 border-primary py-3 px-1 text-primary font-bold text-sm no-underline" href="#">Students</a>
            </nav>
        </div>

        @* Table Container *@
        <div class="bg-white dark:bg-slate-800 shadow-xl border border-slate-200 dark:border-slate-700 overflow-hidden rounded-md">
            <div class="overflow-x-auto custom-scrollbar">
                <table class="w-full text-left border-collapse min-w-[1000px]">
                    <thead>
                        <tr class="bg-slate-100 dark:bg-slate-900 border-b border-slate-300 dark:border-slate-600">
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase">No.</th>
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase">Student Name</th>
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase">Email Address</th>
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase">Registration Date</th>
                            <th class="px-4 py-3 text-xs font-bold text-slate-600 dark:text-slate-300 uppercase text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-orange-50 dark:hover:bg-slate-700/40 transition-colors group">
                                <td class="px-4 py-4 text-sm text-slate-500 group-hover:text-primary font-medium">@(index++)</td>
                                <td class="px-4 py-4 text-sm">
                                    <div class="flex items-center gap-2">
                                        <span class="font-semibold text-slate-800 dark:text-slate-100">@item.Student.NameEn</span>
                                    </div>
                                </td>
                                <td class="px-4 py-4 text-sm">
                                    <span class="text-slate-600 dark:text-slate-400">@item.Student.ApplicationUser.Email</span>
                                </td>
                                <td class="px-4 py-4 text-sm font-mono text-slate-500">
                                    @item.CreatedAt.ToString()
                                </td>
                                <td class="px-4 py-4 text-center">
                                    <div class="flex justify-center gap-2">
                                        @* زر الحذف بنفس ستايل صفحة المحاضرات *@
                                        @* <button type="button"
                                                onclick="confirmRemoveStudent('@item.Id')"
                                                class="p-1.5 rounded-full hover:bg-red-100 text-red-400 hover:text-red-600 transition-all border-none bg-transparent cursor-pointer">
                                            <span class="material-icons text-xl">person_remove</span>
                                        </button> *@
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @Html.AntiForgeryToken()
    </div>
</div>

@section Scripts {
    <script>
        function confirmRemoveStudent(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "The student will be unregistered from this course!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#64748b',
                confirmButtonText: 'Yes, remove!',
                showClass: { popup: 'animate__animated animate__fadeInDown' }
            }).then((result) => {
                if (result.isConfirmed) {
                    // يمكنك هنا إضافة الكود الخاص بمسح الطالب عبر الـ Form مثل صفحة المحاضرات
                    console.log("Removing student with ID: " + id);
                }
            })
        }
    </script>
}