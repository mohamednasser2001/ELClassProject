@using Models
@model IEnumerable<Course>


@{
    var currentLang = Context.Session.GetString("Language") ?? "en";
    var isAr = currentLang == "ar";
}

<div class="container-fluid" dir="@(isAr ? "rtl" : "ltr")">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h3 class="fw-bold mb-0">@(isAr ? "إدارة المناهج" : "Manage Courses")</h3>
        </div>
        <div class="col-md-6 text-@(isAr ? "start" : "end")">
            <a asp-action="Create" class="btn btn-orange">
                <i class="fa-solid fa-plus me-2"></i> @(isAr ? "إضافة منهج جديد" : "New Course")
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="custom-card p-5">
                <i class="fa-solid fa-folder-open fa-4x mb-3 text-muted opacity-25"></i>
                <h4 class="text-muted">@(isAr ? "لا توجد كورسات مضافة" : "No courses added yet")</h4>
                <p>@(isAr ? "ابدأ الآن بإضافة أول مادة دراسية لك" : "Start sharing your knowledge by adding a course")</p>
                <a asp-action="Create" class="btn btn-orange mt-2">@(isAr ? "ابدأ الآن" : "Get Started")</a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card custom-card h-100 overflow-hidden">
                        <div style="height: 180px; background: #eee; position: relative;">
                            @* <img src="@(item.ImageUrl ?? "/Images/default-course.png")" class="w-100 h-100 object-fit-cover" /> *@
                        </div>
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-2">@(isAr ? item.TitleAr : item.TitleEn)</h5>
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <span class="badge bg-light text-dark border p-2">
                                    <i class="fa-solid fa-users me-1"></i> 0 Student
                                </span>
                                <div class="btn-group gap-1">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light shadow-sm">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light shadow-sm">
                                        <i class="fa-solid fa-gear text-primary"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
